<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keywords %>">

    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <!--     Start of nav -->
    <%= render 'shared/blog_nav' %>
  <!--     End of nav -->

  <!-- Start of blog header -->
    <div class="blog-header">
      <div class="container">
        <h1 class="blog-title">Rastlyn's Blog</h1>
        <p class="lead blog-description">Gabriele Baldocci's personal blog.</p>
        <%= link_to 'New Blog', new_blog_path if is_admin? %>
      </div>
    </div>
  <!-- End of blog header   -->

  <!-- Start of container and row element -->
    <div class="container">

      <div class="row">
  <!-- End of Container and row element   -->

        <%= yield %>

        <!-- Start of Sidebar -->
          <%= render 'shared/blog_sidebar' %>
        <!-- End of Sidebar   -->
      </div>
    </div>

    <!-- Start of Footer -->
    <footer class="blog-footer">
      <p><%= copyright_generator %></p>
      <p>
        <a href="#">Back to top</a>
      </p>
    </footer>
    <!-- End of Footer -->

    <%= source_helper("blog") %>
  </body>
</html>
